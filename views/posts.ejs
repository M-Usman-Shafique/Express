<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Posts</title>
    <script src="https://cdn.tailwindcss.com"></script>
  </head>
  <body class="bg-gray-900 text-gray-200">
    <div class="container mx-auto py-8">
      <!-- Create Link -->
      <div class="mb-8">
        <a href="/" class="bg-blue-500 text-white py-2 px-4 rounded hover:bg-blue-600">Create New Post</a>
      </div>
      <!-- Posts List -->
      <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
        <% people.forEach(ppl => { %>
          <div class="bg-gray-800 p-6 rounded-lg shadow-md">
            <img src="<%= ppl.image %>" alt="Profile Image" class="w-full h-48 object-cover rounded-lg mb-4" />
            <h3 class="text-xl font-semibold mb-2"><%= ppl.username %></h3>
            <p class="text-gray-400 mb-4"><%= ppl.email %></p>
            <div class="flex space-x-4">
              <a href="#" class="text-blue-400 hover:underline">Edit</a>
              <a href="#" class="text-red-400 hover:underline">Delete</a>
            </div>
          </div>
        <% }) %>
      </div>
    </div>
    <script src="https://cdn.tailwindcss.com"></script>
  </body>
</html>